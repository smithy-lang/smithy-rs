{
    "version": "1.0",
    "maven": {
        "dependencies": [
            "software.amazon.smithy.rust.codegen:codegen-client:0.1.0",
            "software.amazon.smithy.rust.codegen.server.smithy:codegen-server:0.1.0",
            "software.amazon.smithy:smithy-validation-model:1.60.0"
        ],
        "repositories": [
            {
                "url": "file://$HOME/.m2"
            },
            {
                "url": "https://repo1.maven.org/maven2"
            }
        ]
    },
    "projections": {
        "server-client": {
            "imports": [
                "main.smithy"
            ],
            "plugins": {
                "rust-server-codegen": {
                    "service": "com.test#SampleService",
                    "module": "sdk",
                    "moduleVersion": "0.0.1",
                    "moduleDescription": "Sample service",
                    "moduleAuthors": [
                        "your@email.com"
                    ]
                },
                "rust-client-codegen": {
                    "service": "com.test#SampleService",
                    "module": "client-sdk",
                    "moduleVersion": "0.0.1",
                    "moduleDescription": "Sample service",
                    "moduleAuthors": [
                        "your@email.com"
                    ]
                }
            }
        }
    }
}
